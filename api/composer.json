{
  "name": "supertodo/api",
  "description": "API supertodo",
  "authors": [
    {
      "name": "Pierre-Yves LOUKAKOU",
      "email": "p.loukakou@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "SuperTodo\\": "src/",
      "SuperTodo\\Tests\\": "tests/"
    },
    "classmap": [
      "./tests"
    ]
  },
  "require": {
    "altorouter/altorouter": "^2.0",
    "symfony/var-dumper": "^7.0",
    "ext-json": "*",
    "firebase/php-jwt": "^6.10",
    "psr/http-message": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9",
    "php-http/mock-client": "^1.6",
    "nyholm/psr7": "^1.8"
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  }
}
